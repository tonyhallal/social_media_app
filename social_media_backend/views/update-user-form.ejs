<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>

    <style>
        input {
            border: 1px solid;
            border-radius: 10px;
        }
    </style>


</head>
<body>
<%- include('partials/navbar')%>
<div class="mx-auto flex items-center justify-center">
    <div class="border border-black drop-shadow-2xl bg-white rounded px-20 py-4">
        <h1 class="w-full text-center font-bold text-4xl">Update User</h1>
        <form class="flex flex-col gap-y-4 mt-8" action="/api/v1/update-user" method="post">

                <input type="hidden" name="user_id" value="<%= user.user_id %>">

            <div class="flex items-center gap-x-6 w-full justify-between">
                <label for="username">username</label>
                <input class="p-3" type="text" placeholder="enter username" name="user_username"
                       value="<%= user.user_username %>"
                       id="username">
            </div>
            <div class="flex items-center gap-x-6 w-full justify-between">
                <label for="first-name">first name</label>
                <input class="p-3" type="text" placeholder="enter first name" name="user_first_name"
                       value="<%= user.user_first_name %>"
                       id="first-name">
            </div>
            <div class="flex items-center gap-x-6 w-full justify-between">
                <label for="last-name">last name</label>
                <input class="p-3" type="text" placeholder="enter last name" name="user_last_name"
                       value="<%= user.user_last_name %>"
                       id="last-name">
            </div>
            <div class="flex items-center gap-x-6 w-full justify-between">
                <label for="phone-number">phone number</label>
                <input class="p-3" type="tel" placeholder="enter phone number" name="user_phone_number"
                       value="<%= user.user_phone_number %>"
                       id="phone-number">
            </div>
            <div class="flex items-center gap-x-6 w-full justify-between">
                <label for="email">email</label>
                <input class="p-3" type="text" placeholder="enter email" name="user_email"
                       value="<%= user.user_email %>" id="email">
            </div>
            <div class="flex items-center gap-x-6 w-full justify-between">
                <label for="address">address</label>
                <input class="p-3" type="text" placeholder="enter address" name="user_address"
                       value="<%= user.user_address %>"
                       id="address">
            </div>
            <input type="hidden" name="user_profile_picture" value="<%= user.user_profile_picture %>">
            <div class="flex items-center gap-x-6 w-full justify-between">
                <label for="bio">bio</label>
                <input class="p-3" type="text" name="user_bio" placeholder="enter bio" value="<%= user.user_bio %>"
                       id="bio">
            </div>
            <div class="flex items-center gap-x-6 w-full justify-between">
                <label for="password">password</label>
                <input class="p-3" type="password" name="user_password" placeholder="enter password"
                       value="<%= user.user_password %>"
                       id="password">
            </div>

            <button type="submit" class="mx-auto p-3 bg-blue-500 text-white rounded hover:opacity-70 duration-300"
            >
                update
            </button>
        </form>
    </div>
</div>
<%- include('partials/footer')%>
</body>
</html>